let sentence="This is javascript code";

let arrSentence=Array.from(sentence);
console.log(arrSentence);

let reverseString="";

for(let i=arrSentence.length-1;i>=0;i--){
  reverseString+=arrSentence[i]+"";
}
console.log(reverseString);

